# redirect every query that ends with / to the same without the /
# for example /ping/ will redirect to /ping
GET     /*file/                     controllers.Application.redirectToResource(file: String)

# API
GET     /api/wip                    controllers.Api.wip

# Errors
GET     /error                      controllers.Application.error
GET     /error/404                  controllers.Application.missingFile

# UI DEV
GET     /dev/                       controllers.Application.dev(file="index.html")
GET     /dev/*file                  controllers.Application.dev(file)

# UI
GET     /                           controllers.Assets.at(path="/public/dist", file="index.html")
GET     /*file                      controllers.Assets.at(path="/public/dist", file)

# Assets
# GET   /assets/*file               controllers.Assets.at(path="/public", file)
